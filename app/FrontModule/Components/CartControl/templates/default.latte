{varType App\Model\Entities\Cart $cart}

<div n:snippet="info" data-naja-snippet-cache="off">

  {if empty($cart) || $cart->getTotalCount()==0}
    <a href="{plink :Front:Cart:list}">košík</a> je prázdný
  {else}
  {var $cartTotalCount = $cart->getTotalCount();}
    <a href="{plink :Front:Cart:list}">v košíku</a> je {$cartTotalCount} {if $cartTotalCount==1}položka{elseif $cartTotalCount<5}položky{else}položek{/if} za {$cart->getTotalPrice()|number:0,',',' '} Kč
  {/if}

</div>

