{snippet}
  <div {if !empty($class)}class="{$class}"{/if}>
    {if $user->isLoggedIn()}

    {if $user->roles[1] == "admin"}
    <div><a href="{plink :Admin:Dashboard:default}">administrace</a></div>
    {/if}
      <strong>{$user->identity->name}</strong>
      -
      <a href="{link logout!}">odhlásit se</a>
    {else}
      <a href="{link login!}">přihlásit se</a>
    {/if}
  </div>
{/snippet}


